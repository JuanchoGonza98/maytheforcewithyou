#!/bin/bash

FILE="/opt/sigor_log/estado_server.log"
DEST_EMAIL="soporte@nts.com.py"
DATE=`/bin/date +%d/%m/%Y`

if [ -f $FILE ]; then
        cat $FILE | mutt -s "Estado de servidor YODA $DATE" $DEST_EMAIL
        rm -f $FILE
else
        echo "No se ha generado el archivo del estado del servidor YODA. Favor verificar." | mutt -s "Estado de servidor YODA $DATE" $DEST_EMAIL
fi
